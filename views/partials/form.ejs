<div>
    <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#add-book"
        data-bs-whatever="@fat">Add a new book</button>
    <div class="modal fade" id="add-book" tabindex="-1" aria-labelledby="add-book-popup" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="add-book-popup">New book</h1>
                </div>
                <div class="modal-body">
                    <form action="/add" method="post">
                        <div class="d-flex align-items-center mb-4">
                            <label for="title" class="me-2 mb-0" style="width: 100px;">Title:</label>
                            <input type="text" class="form-control" id="title" name="title">
                        </div>
                        <div class="d-flex align-items-center mb-4">
                            <label for="author" class="me-2 mb-0" style="width: 100px;">Author:</label>
                            <input type="text" class="form-control" id="author" name="author">
                        </div>
                        <div class="d-flex align-items-center mb-4">
                            <label for="notes" class="me-2 mb-0" style="width: 100px;">Your
                                thoughts:</label>
                            <textarea class="form-control" id="notes" name="notes"></textarea>
                        </div>
                        <div class="d-flex align-items-center mb-4">
                            <label class="me-2 mb-0" style="width: 100px;">Your
                                rating:</label>
                            <div class="rating-5">
                                <input type="radio" class="form-check-input" id="rating-5" name="rating" value="5">
                                <label for="rating-5" class="me-2 mb-0" style="width: 100px;">5</label>
                            </div>
                            <div class="rating-4">
                                <input type="radio" class="form-check-input" id="rating-4" name="rating" value="4">
                                <label for="rating-4" class="me-2 mb-0" style="width: 100px;">4</label>
                            </div>
                            <div class="rating-3">
                                <input type="radio" class="form-check-input" id="rating-3" name="rating" value="3">
                                <label for="rating-3" class="me-2 mb-0" style="width: 100px;">3</label>
                            </div>
                            <div class="rating-2">
                                <input type="radio" class="form-check-input" id="rating-2" name="rating" value="2">
                                <label for="rating-2" class="me-2 mb-0" style="width: 100px;">2</label>
                            </div>
                            <div class="rating-1">
                                <input type="radio" class="form-check-input" id="rating-1" name="rating" value="1">
                                <label for="rating-1" class="me-2 mb-0" style="width: 100px;">1</label>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-4">
                            <label for="date-read" class="me-2 mb-0" style="width: 100px;">Date
                                read:</label>
                            <input type="date" class="date-read" id="date-read" max="<%= today %>" name="date_read">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary"
                                data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Create entry</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>